#include <iostream>
#include <string>
using namespace std;

int main()
{
	double length, width, rect, squ, tri;
	cout << "\n calculating the area of rectangle triangle square shapes \n";
	cout << " Enter the length :\n";
	cin >> length;
	cout << "Enter the width :\n";
	cin >> width;

	rect = length * width;
	tri = (length * width) * 0.5;
	squ = length * length;

	cout << "\nthe area of rectangle : \n" << rect;
	cout << "\nthe area of triangle : \n" << tri;
	cout << "\nthe area of square : \n" << squ;
}
